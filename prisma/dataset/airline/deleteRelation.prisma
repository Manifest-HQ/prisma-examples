// Delete the relation between luggage and booking
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model flight {
  id          Int       @id @default(autoincrement())
  code        String    @unique
  origin      String
  destination String
  date        DateTime
  bookings    booking[]
  pilots      pilot_flight[]
  @@index([destination, origin])
}

model booking {
  id          Int       @id @default(autoincrement())
  flight_id    Int
  passengerId Int
  seat        String
  class       String
  flight      flight    @relation(fields: [flight_id], references: [id])
  passenger   passenger @relation(fields: [passengerId], references: [id])
  @@index([passengerId])
}

model passenger {
  id          Int       @id @default(autoincrement())
  first_name   String
  last_name    String
  email       String    @unique
  bookings    booking[]
  @@index([first_name, last_name])
}

model luggage {
  id          Int       @id @default(autoincrement())
  bookingId   Int
  weight      Float
  description String
}

model pilot {
  id          Int       @id @default(autoincrement())
  first_name   String
  last_name    String
  license     String    @unique
  flights     pilot_flight[]   
  @@index([first_name, last_name])
}

model pilot_flight {
  pilot_id     Int
  flight_id    Int
  pilot       pilot    @relation(fields: [pilot_id], references: [id])
  flight      flight   @relation(fields: [flight_id], references: [id])
  @@id([pilot_id, flight_id])
}